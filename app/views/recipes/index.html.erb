<%= form_tag(recipes_path, method: :get) do %>
    <div>
    <%= text_field_tag 'search', @search_term, placeholder: 'Food Type Please' %>
    <%= submit_tag 'Search' %>
    </div>
<% end %>


<h1>Searching for -
  <%= @search_term %></h1>
<% if (@recipes.nil? or @recipes == []) %>
<p>
  <h2>No recipes found.. Sorry</h2>
</p>
<% else %>

<div class="transitions-enabled" id="pins">
  <% @recipes.each do |course| %>
  <div class="box panel panel-default">
    <%= link_to(image_tag(course["image_url"], height: '800', width: '800'), course["f2f_url"])%>
    <div class="pin-description">
      <%= link_to(course["title"], course["f2f_url"]) %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
