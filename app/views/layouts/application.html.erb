<!DOCTYPE html>
<html>
  <head>
    <title>Finalasses</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet'>

  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Triggerhappy</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/">Home</a>
          </li>
            <span class="search">
              <%= form_tag search_path, method: "get", class: "navbar-form navbar-left" do |f| %>
                <%= text_field_tag :term, params[:term],placeholder:"What do you feel like eating?" %>
                <% submit_tag %>
              <% end %>
            </span>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>

              <% if current_user %>

              <a>Hello <%= current_user.name %>!</a>
          </li>

          <li><%= link_to "Recipes", recipes_path, data: {turbolinks: false} %></li>

          <li><%= link_to "Show Pins", pins_path, data: {turbolinks: false} %></li>

          <li><%= link_to "New Pin", new_pin_path %></li>

          <li>
            <a href="/logout">
              <span class="glyphicon glyphicon-log-in"></span>
              Logout
            </a>
          </li>
      <% else %>
    <li>
        <a href="/signup">
          <span class="glyphicon glyphicon-user"></span>
          Sign Up</a>
      </li>
      <li>
        <a href="/login">
          <span class="glyphicon glyphicon-log-in"></span>
          Login</a>
      </li>
      <% end %>
    </ul>
  </div>
</nav>


<%= yield %>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '444472895906779',
      xfbml      : true,
      version    : 'v2.9'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

</body>
</html>
