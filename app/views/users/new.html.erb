
<div class="container">
  <div class="row">
    <%= form_for :user, :html => {:class => "form-signin mg-btm"}, url: '/users' do |f| %>
    <h1 class="heading-desc">
      Sign Up
    </h1>
    <div class="main">

      <%= f.label :name %> <%= f.text_field :name, placeholder:"Name", class:"form-control"%>
      <%= f.label :email %> <%= f.email_field :email, placeholder:"Email", class:"form-control"%>
      <%= f.label :password %> <%= f.password_field :password, placeholder:"Password",class:"form-control" %>
      <%= f.submit "Continue", class:"btn btn-danger btn-block" %>
    </div>

    <strong>OR</strong>

    <div class="social-box">
      <div class="row mg-btm">
        <div class="col-md-12">
          <%= link_to "Sign in with Facebook", "/auth/facebook" %>

      <div class="row">
        <div class="col-md-12">
          <a href="#" class="btn btn-info btn-block">
            <i class="icon-twitter"></i>
            Login with Twitter
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
<% end %>


<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9&appId=181441091930160";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<script>
$(function () {
  var x = 0;
  setInterval(function () {
    x -= 1;
    $('body').css('background-position', x + 'px 0');
  }, 10);
})
</script>
